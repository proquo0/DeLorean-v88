{
  "compilerOptions": {
    "outDir": "./build",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6", "es5", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": false,
    "importHelpers": true,
    "removeComments": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@models": ["./models"],
      "@assets": ["./src/assets"],
      "@ducks": ["./src/ducks"],
      "@sagas": ["./src/sagas"]
    }
  },
  "exclude": [
    "node_modules",
    "functions"
  ]
}